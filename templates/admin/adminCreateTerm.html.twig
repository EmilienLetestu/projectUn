{% extends "base.html.twig" %}
{% block body %}

    {{ include('admin/adminNav.html.twig') }}

    <h1 class="adminTitle">CREATE LEGAL NOTICE TERM</h1>

    <div class="container-fluid entityData">

        <div class="well">
            {{ form_start(form ,{'attr':{'id':'createTerm'}}) }}
            <div class="form-group row">
                {{ form_label(form.title) }}<span class="req">*</span>
                {{ form_widget(form.title ,{'attr':{'class':'form-control'}}) }}
                <span class="invalidBack">{{ form_errors(form.title) }}</span>
                <span class="invalid_sign" id="invalid_termTitle_icon" style="display: none">
                    <i class="fa fa-times" aria-hidden="true"></i></span>
                <span class="valid_sign" id="valid_termTitle_icon" style="display: none">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </span>
                <span class="invalid" id="invalid_title" style="display: none">Between 5 up to 30 characters</span>
            </div>
            <div class="form-group row">
                {{ form_label(form.article) }}<span class="req">*</span>
                {{ form_widget(form.article ,{'attr':{'class':'tinyMce'}}) }}
                <span class="invalidBack">{{ form_errors(form.abstract) }}</span>
                <span class="invalid_sign" id="invalid_article_icon" style="display: none">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </span>
                <span class="valid_sign" id="valid_article_icon" style="display: none">
                    <i class="fa fa-check" aria-hidden="true"></i>
                </span>
                <span class="invalid" id="invalid_abstract" style="display: none">70 words maximum</span>
            </div>
            <div class="form-group row">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}