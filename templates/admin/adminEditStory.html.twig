{% extends "base.html.twig" %}
{% block body %}

{{ include('admin/adminNav.html.twig') }}

<h1 class="adminTitle">EDIT "{{ story.title|upper }}"</h1>

<div class="container-fluid entityData">

    <div>
    {{ form_start(form ,{'attr':{'id':'addForm'}}) }}
        <div class="form-group row" id="editTitle">
            {{ form_label(form.title) }}<span class="req">*</span>
            {{ form_widget(form.title ,{'attr':{'class':'form-control'}}) }}
            <span class="invalidBack">{{ form_errors(form.title) }}</span>
            <span class="invalid_sign" id="invalid_title_icon" style="display: none">
                <i class="fa fa-times" aria-hidden="true"></i>
            </span>
            <span class="valid_sign" id="valid_title_icon" style="display: none">
                        <i class="fa fa-check" aria-hidden="true"></i>
            </span>
            <span class="invalid" id="invalid_title" style="display: none">Between 5 up to 100 characters</span>
        </div>
        <div class="form-group row" id="editAbstract">
            {{ form_label(form.abstract) }}<span class="req">*</span>
            {{ form_widget(form.abstract ,{'attr':{'class':'form-control tinyMce'}}) }}
            <span class="invalidBack">{{ form_errors(form.abstract) }}</span>
            <span class="invalid_sign" id="invalid_abstract_icon" style="display: none">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </span>
            <span class="valid_sign" id="valid_abstract_icon" style="display: none">
                        <i class="fa fa-check" aria-hidden="true"></i>
                    </span>
            <span class="invalid" id="invalid_abstract" style="display: none">70 words maximum</span>
        </div>
        <div class="form-group row part2" id="editPlot">
            {{ form_label(form.plot) }}<span class="req">*</span>
            {{ form_widget(form.plot ,{'attr':{'class':'form-control tinyMce'}}) }}
            <span class="invalidBack">{{ form_errors(form.plot) }}</span>
            <span class="invalid_sign" id="invalid_plot_icon" style="display: none">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </span>
            <span class="valid_sign" id="valid_plot_icon" style="display: none">
                        <i class="fa fa-check" aria-hidden="true"></i>
                    </span>
            <span class="invalid" id="invalid_plot" style="display: none">200 words maximum</span>
        </div>
        <div class="form-group row part4">
            <button class="btn btn-success" id="addStoryBtn" type="submit">Submit</button>
            <input type="hidden" id="originalTitle" value="{{ story.title }}">
            <input type="hidden" id="originalPlot" value="{{ story.plot }}">
            <input type="hidden" id="originalAbstract" value="{{ story.abstract }}">
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/editStory.js') }}"></script>
{% endblock %}
