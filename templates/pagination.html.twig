{% extends 'base.html.twig' %}

{% block body %}

    <div>
        <h1 class="storyCount">{{ title }} {{ stories|length > 1 ? 'stories' : 'story'  }}</h1>
    </div>

    <div id="filter">
        {{ form_start(filter,{'attr':{'class':'form-inline'},'action': path('search') }) }}
        <div class="form-group ">
            {{ form_widget(filter.topic ,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(filter.patronage,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(filter.worldArea,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(filter.country ,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group" id="filterBtn">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-search " aria-hidden="true"></i>
                search
            </button>
        </div>
        <div class="form-group" id="resetBtn">
            <a class="btn" href="{{ path('browse', {'pageNumber':1})}}">
                <i class="fa fa-power-off " aria-hidden="true"></i>
                reset
            </a>
        </div>
        {{ form_end(filter) }}
    </div>
   {% if stories|length != 0 %}

        {{ include('storyCard.html.twig') }}

        {% if pageNumber > 1 %}
        <div id="previous">
            <a class="pull-left btn" href="{{ path('browse',{'pageNumber': pageNumber - 1, 'country': country, 'topic': topic, 'patronage': patronage}) }}" id="previousBtn">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </a>
        </div>
        {% endif %}

        {% if totalPage > 1 and pageNumber < totalPage %}
        <div id="nextPrevious">
            <a class="pull-right btn" href="{{ path('browse',{'pageNumber': pageNumber + 1,  'country': country, 'topic': topic, 'patronage': patronage}) }}" id ="nextBtn">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </a>
        </div>
        {% endif %}

        <div id="pageLinks" class="text-center">
            <ul class="list-inline">
                {% for i in 1..totalPage %}
                    <li class="list-inline-item" {{ pageNumber == i ? 'id="currentPage"' }}>
                        <a href="{{ path('browse',{'pageNumber': i, 'country': country, 'topic': topic, 'patronage': patronage}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
   {% endif %}
{% endblock %}


