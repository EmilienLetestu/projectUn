{% extends 'base.html.twig' %}

{% block body %}
    {% if title == 'countTotal' %}
        <h1 class="storyCount">Our climate stories safe holds <b>{{ stories|length }} stories</b></h1>
    {% endif %}
    {% if title == 'countResult' %}
        <h1 class="storyCount"><b>{{ stories|length }} stories</b> found</h1>
    {% endif %}
    <div id="filter">
        {{ form_start(filter,{'attr':{'class':'form-inline'}}) }}
        <div class="form-group ">
            {{ form_widget(filter.topic ,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(filter.patronage,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_widget(filter.country ,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">search</button>
            <a class="btn btn-warning" href="{{ path('browse',{'pageNumber': 1})}}"> reset filter</a>
        </div>
        {{ form_end(filter) }}
    </div>

    {{ include('storyCard.html.twig') }}

    {% if pageNumber > 1 %}
    <div id="previous">
        <a class="pull-left btn btn-primary" href="{{ path('browse',{'pageNumber': pageNumber - 1}) }}">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </a>
    </div>
    {% endif %}

    {% if totalPage > 1 and pageNumber < totalPage %}
    <div id="nextPrevious">
        <a class="pull-right btn btn-primary" href="{{ path('browse',{'pageNumber': pageNumber + 1}) }}">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </a>
    </div>
    {% endif %}

    <div id="pageLinks" class="text-center">
        <ul class="list-inline">
            {% for i in 1..totalPage %}
                <li class="list-inline-item" {{ pageNumber == i ? 'id="currentPage"' }}>
                    <a href="{{ path('browse',{'pageNumber': i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
