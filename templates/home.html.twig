{% extends "base.html.twig" %}

{% block body %}

    <div id="homeDashBoard">

        <a href="{{ path('addStory')}}" class="btn btn-outline">Add your story</a>
        <button  class="btn btn-outline">Browse stories</button>

    </div>

    <table  class="table table-responsive table-striped table-hover">
        <thead>
         <tr>
             <th>Title</th>
             <th>Topic</th>
             <th>Abstract</th>
             <th>Contact</th>
             <th>Read</th>
         </tr>
        </thead>
        <tbody>
        {% for story in storyList %}
              <tr>
                  <th>{{ story.title }}</th>
                  <th>{{ story.topic.type }}</th>
                  <th>{{ story.abstract|slice(0,150)|raw }}....</th>
                  <th>{{ story.contactEmail }}</th>
                  <th><a href="{{ path('story',{'storyId':story.id}) }}" class="btn btn-outline">read story</a></th>
              </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('vueJs/ux.js') }}"></script>
{% endblock %}